{
    "name": "strkit",
    "displayName": "strkit",
    "description": "String toolkit for vscode.",
    "version": "0.0.1",
    "publisher": "ishiahirake",
    "engines": {
        "vscode": "^1.37.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:strkit.replace",
        "onCommand:strkit.remove.empty",
        "onView:strkit"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "commands": [
            {
                "command": "strkit.replace",
                "title": "StrKit: Replace"
            },
            {
                "command": "strkit.remove.empty",
                "title": "StrKit: Remove Empty Lines"
            },
            {
                "command": "strkit.refresh",
                "title": "Refresh",
                "icon": {
                    "light": "resources/icons/refresh.svg",
                    "dark": "resources/icons/refresh.svg"
                }
            },
            {
                "command": "strkit.delete.operation",
                "title": "Delete",
                "icon": {
                    "light": "resources/icons/delete.svg",
                    "dark": "resources/icons/delete.svg"
                }
            }
        ],
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "strkit",
                    "title": "String Toolkit",
                    "icon": "resources/icons/strkit.svg"
                }
            ]
        },
        "views": {
            "strkit": [
                {
                    "id": "strkit",
                    "name": ""
                }
            ]
        },
        "menus": {
            "view/title": [
                {
                    "command": "strkit.refresh",
                    "when": "view == strkit",
                    "group": "navigation"
                }
            ],
            "view/item/context": [
                {
                    "command": "strkit.delete.operation",
                    "when": "view == strkit",
                    "group": "inline"
                }
            ]
        }
    },
    "scripts": {
        "vscode:prepublish": "yarn run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "pretest": "yarn run compile",
        "test": "node ./out/test/runTest.js"
    },
    "devDependencies": {
        "@types/glob": "^7.1.1",
        "@types/mocha": "^5.2.6",
        "@types/node": "^10.12.21",
        "@types/vscode": "^1.37.0",
        "glob": "^7.1.4",
        "mocha": "^6.1.4",
        "ts-node": "^8.10.2",
        "tslint": "^5.12.1",
        "typescript": "^3.3.1",
        "vscode-test": "^1.0.2"
    },
    "dependencies": {
        "@types/lodash": "^4.14.137",
        "lodash": "^4.17.21"
    }
}
